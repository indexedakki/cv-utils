# Dockerfile
FROM python:3.11-slim

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 1) Install system dependencies
RUN apt-get update \
 && apt-get install -y --no-install-recommends \
    gcc g++ \
    unixodbc unixodbc-dev \
    curl gnupg2 ca-certificates apt-transport-https \
 && rm -rf /var/lib/apt/lists/*

# 2) Fetch & dearmor MS key into a keyring, then add the repo with signed-by
RUN curl -fsSL https://packages.microsoft.com/keys/microsoft.asc \
      | gpg --dearmor \
      > /usr/share/keyrings/microsoft-archive-keyring.gpg \
 && echo "deb [arch=amd64 signed-by=/usr/share/keyrings/microsoft-archive-keyring.gpg] \
      https://packages.microsoft.com/debian/12/prod bookworm main" \
      > /etc/apt/sources.list.d/microsoft-prod.list

# 3) Install the SQL Server ODBC driver
RUN apt-get update \
 && ACCEPT_EULA=Y apt-get install -y msodbcsql18 \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY . .

EXPOSE 8000

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
